<% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <div class="container">
      <h1><%= productDetails.productName %></h1>
      <div class="wrapper">
        <main>
          <div class="row">
            <div class="col s12 m12 l6">
               <div class="card large">
                 <div class="card-image">
                   <img class="grow" src=<%= productDetails.image %>>
                   <span class="card-title categorycctitle">Delicious <br /> Cupcakes!</span>
                 </div>
                 <div class="card-content">
                   <p>
                   <span>Category:</span>
                   <%= productDetails.category %>
                   </p>

                   <!-- Product Description -->
                   <div>
                   <p><%= productDetails.productName %>...</p>
                   <br />
                   <p><%= productDetails.description%></p>
                   </div>
       </div>
               </div>
             </div>



          <div class="col s12 m12 l6">
       <div class="card white darken large">
       <div id="itemFonts" class="card-content white-text">
       <span class="card-title">Details</span>
       <!-- Product Category -->

       <br />
       <!--Alcohol Content Info -->
       <p>
       <span class="title">Alcohol Content:</span>
       <!-- Checking if it's alcolohic -->
       <span class="description"><%= productDetails.alcohol?productDetails.alcohol='Yes':productDetails.alcohol='No'  %></span>
       </p>
       <!-- Product Size - Order Count -->
       <p>
       <span class="title">Unit Size: </span>
       <span class="description"><%= productDetails.unitSize%></span>
       </p>
       <!--Ingredients / Dietary Info -->
       <p>
       <span class="title">Ingredients: </span>
       <span class="description"><%= productDetails.dietaryRestrictions%></span>
       </p>
       <!-- Price -->
       <p>

       <span class="title">Price: </span>
       <span class="description">$<%= (productDetails.price * 0.01).toFixed(2)  %> per cupcake</span>
       </p>
       <!-- Adding user order to Orders table -->
       <form action="/order/newOrder" method="post">
       <!-- Quantity. Materialize gave it a display of none by default? -->
       <!-- input field to hold product Id. Display of none. -->
       <input style="display:none" value='<%= productDetails.id %>' name="productId" />
       <!-- input field to hold user id. Display of none -->
       <select name="quantity" style="width:100%" id="selectQuantity">
       <option>Select a quantity</option>
       <option value="1">1 Dozen @ $<%= (productDetails.price * 0.01)*12 %></option>
       <option value="2">2 Dozen @ $<%= (productDetails.price * 0.01)*24 %></option>
       <option value="3">3 Dozen @ $<%= (productDetails.price * 0.01)*36 %></option>
       </select>
       <br>
       <!-- Add to Cart button -->
       <input class="waves-light btn-large blue" type="submit" value="Add to Cart" />
       </form>
       </div>
       </div>
       </div>

   <!-- end of row -->


        </div>
        </main>


      </div>
    </div>

    <% include ../partials/footer.ejs %>
  </body>
</html>
